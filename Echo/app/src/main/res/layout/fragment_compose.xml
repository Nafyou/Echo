<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/sunglow"
    tools:context="com.example.echo.fragments.ComposeFragment">

    <!-- android:background="@drawable/et_style" -->

    <!-- android:background="@drawable/et_style" -->

    <!-- android:background="@drawable/et_style" -->

    <!-- android:background="@drawable/et_style" -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="357dp"
        android:layout_height="565dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/et_style"
        app:tint="@color/shandy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/tvTimeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="65dp"
        android:height="12dp"
        android:background="@null"
        android:text="1:00/2:04"
        android:textColor="#858585"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <EditText
        android:id="@+id/etLanguage"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/et_style_color"
        android:backgroundTint="#59FFFFFF"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="@string/language"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textDirection="firstStrongRtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etWord"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/et_style_color"
        android:backgroundTint="#59FFFFFF"
        android:fontFamily="@font/baloo"
        android:hint="@string/word_phrase"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textDirection="firstStrongRtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLanguage"
        tools:ignore="TextContrastCheck" />

