    <EditText
        android:id="@+id/etTranslation"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_style_color"
        android:backgroundTint="#59FFFFFF"
        android:fontFamily="@font/baloo"
        android:hint="@string/translation"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textDirection="firstStrongRtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etWord" />


    <EditText
        android:id="@+id/etDescription"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_style_color"
        android:backgroundTint="#59FFFFFF"
        android:fontFamily="@font/baloo"
        android:hint="@string/description"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textDirection="firstStrongRtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTranslation" />

    <EditText
        android:id="@+id/etCategory"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_style_color"
        android:backgroundTint="#59FFFFFF"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="@string/category"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textDirection="firstStrongRtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDescription" />

    <Button
        android:id="@+id/btnRecordAudio"
        android:layout_width="335dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/baloo"
        android:text="@string/record_audio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePlay" />

    <Button
        android:id="@+id/btnCaptureAudio"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="145dp"
        android:background="@drawable/btn_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/baloo"
        android:text="Select file"
        app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecordAudio" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="100dp"
        android:layout_height="75dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/btn_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/baloo"
        android:text="@string/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecordAudio" />

    <VideoView
        android:id="@+id/evView"
        android:layout_width="305dp"
        android:layout_height="70dp"

        android:layout_marginTop="650dp"
        android:text="@string/insert_video_here"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePlay"
        android:layout_width="45dp"
        android:layout_height="47dp"

        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCategory" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="193dp"
        android:layout_height="215dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/echocheer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>