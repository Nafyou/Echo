<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunglow"

    tools:context="com.example.echo.fragments.ComposeFragment">

    <EditText
        android:id="@+id/etLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:hint="@string/language"
        android:importantForAutofill="no"
        android:inputType="text"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLanguage"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/et_style"
        android:hint="@string/word_phrase"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/etTranslation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etWord"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/et_style"
        android:hint="@string/translation"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTranslation"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/et_style"
        android:hint="@string/description"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescription"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:hint="@string/category"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnCaptureAudio"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCategory"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/btn_style"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_over"
        android:insetLeft="14dp"
        app:cornerRadius="2dp"
        app:icon="@android:drawable/ic_media_play"
        app:iconPadding="8dp"
        app:iconTint="@color/inkblack"
        app:strokeColor="@color/inkblack"
        app:strokeWidth="15dp" />
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCategory"
        android:layout_marginTop="16dp"
        android:text="@string/record_audio" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCaptureAudio"
        android:layout_marginTop="16dp"

        android:theme="@drawable/btn_style"
        android:background="@color/white"


        android:text="@string/submit" />

    <VideoView
        android:id="@+id/evView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_style"
        android:text="@string/insert_video_here" />


</RelativeLayout>