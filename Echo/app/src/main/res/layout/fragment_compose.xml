    <Button
        android:id="@+id/btnRecordAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagePlay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="@string/record_audio" />

    <Button
        android:id="@+id/btnCaptureAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecordAudio"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Select file" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/btnCaptureAudio"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"

        android:text="@string/submit" />

    <VideoView
        android:id="@+id/evView"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_below="@+id/btnSubmit"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/insert_video_here" />

    <ImageView
        android:id="@+id/imagePlay"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentEnd="true"

        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="182dp"
        android:src="@android:drawable/ic_media_play" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="29dp"
        android:layout_below="@+id/etCategory"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/tvTimeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="72dp"
        android:height="12dp"
        android:background="@null"
        android:text="1:00/2:04"
        android:textColor="#858585"
        android:textSize="11sp" />


</RelativeLayout>